<header class="bg-gray-900 text-white border-b border-gray-800 mb-4"
        {{ stimulus_controller('navigation') }}>
    <nav class="bg-gray-800">
        <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
            <div class="relative flex h-16 items-center justify-between">
                <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
                    {# Mobile menu button #}
                    <button type="button"
                            {{ stimulus_target('navigation','mobileMenuButton') }}
                            {{ stimulus_action('navigation','toggleMobileMenu') }}
                            class="relative inline-flex items-center justify-center rounded-sm p-2 text-gray-400 hover:bg-gray-700 hover:text-white">
                        <svg class="block size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                             stroke="currentColor" aria-hidden="true" data-slot="icon">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
                        </svg>
                        <svg class="hidden size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                             stroke="currentColor" aria-hidden="true" data-slot="icon">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
                <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
                    <div class="flex shrink-0 items-center">
                        <a href="{{ path('app_home') }}">
                            <svg class="size-10">
                                <use href="#tailwind-logo"/>
                            </svg>
                        </a>
                    </div>
                    <div class="hidden sm:ml-6 sm:block">
                        <div class="flex space-x-4 items-center">
                            <a href="{{ path('app_home') }}"
                               class="rounded-sm {% if app.current_route == 'app_home' %}bg-gray-900{% endif %} px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white">
                                Domů
                            </a>
                            <a href="#"
                               class="rounded-sm {% if app.current_route == 'app_price' %}bg-gray-900{% endif %} px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white">
                                Cena
                            </a>
                            <a href="#"
                               class="rounded-sm {% if app.current_route == 'app_faq' %}bg-gray-900{% endif %} px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white">
                                FAQ
                            </a>
                        </div>
                    </div>
                </div>
                <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
                    <div class="hidden md:block">
                        <a href="{{ path('app_login') }}"
                           class="rounded-sm {% if app.current_route == 'app_login' %}bg-gray-900{% endif %} px-3 py-2 text-sm font-medium text-white">
                            {{ 'navigation.sign_in'|trans }}
                        </a>
                        <a href="{{ path('app_register') }}"
                           class="rounded-sm {% if app.current_route == 'app_register' %}bg-gray-900{% endif %} px-3 py-2 text-sm font-medium text-white">
                            {{ 'navigation.sign_up'|trans }}
                        </a>
                    </div>
                    <div class="md:hidden relative ml-3">
                        <div class="relative">
                            <button type="button"
                                    data-action="click->navigation#toggleUserMenu"
                                    class="relative rounded-full bg-gray-800 p-1 text-gray-400 hover:text-white focus:ring-0"
                            >
                                <svg class="size-5">
                                    <use href="#user"/>
                                </svg>
                            </button>
                            <div {{ stimulus_target('navigation','userSubmenu') }}

                                    class="absolute hidden group-hover:block right-0 mt-1 origin-top-right  py-1  bg-gray-800 text-white rounded-sm shadow-lg z-10 w-max whitespace-nowrap">
                                <!-- Active: "bg-gray-100 outline-hidden", Not Active: "" -->
                                <a href="{{ path('app_login') }}"
                                   class="block px-4 py-2 text-sm hover:bg-gray-700">{{ 'navigation.sign_in'|trans }}</a>
                                <a href="{{ path('app_register') }}"
                                   class="block px-4 py-2 text-sm hover:bg-gray-700">{{ 'navigation.sign_up'|trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mobile menu, show/hide based on menu state. -->
        <div {{ stimulus_target('navigation','mobileMenu') }}
                class="hidden sm:hidden z-10 absolute bg-gray-900 w-full">
            <div class="space-y-1 px-2 pt-2 pb-3">
                <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
                <a href="{{ path('app_home') }}"
                   class="block rounded-sm {% if app.current_route == 'app_home' %}bg-gray-900{% endif %}  px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white">
                    Domů
                </a>
                <a href="#"
                   class="block rounded-sm {% if app.current_route == 'app_price' %}bg-gray-900{% endif %} px-3 py-2 text-base font-medium text-white">
