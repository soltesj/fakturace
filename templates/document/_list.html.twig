<table class="table mt-3">
    <thead>
    <tr>
        <th>DocumentNumber</th>
        <th>CustomerId</th>
        <th>DateIssue</th>
        <th>DatePay</th>
        <th>PriceNoVat</th>
        <th>PriceTotal</th>
        <td>{{ 'ToPay'|trans }}</td>
        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for document in documents %}
        <tr>
            <td>{% if is_granted('EDIT',document) %}<a
                    href="{{ path('app_document_edit', {'company': company.id, 'document': document.id}) }}"
                    class="text-decoration-none">{{ document.documentNumber }}</a>{% else %}{{ document.documentNumber }}{% endif %}
            </td>
            <td>{{ document.customerName }}</td>
            <td>{{ document.dateIssue ? document.dateIssue|date('Y-m-d') : '' }}</td>
            <td>{{ document.dateDue ? document.dateDue|date('Y-m-d') : '' }}</td>
            <td>{{ document.price }}</td>
            <td>{{ document.priceWithVat }}</td>
            <td>{{ document.toPay }}</td>
            <td>
                <svg width="20" height="20" class="bi me-1">
                    <use href="#envelope-arrow-up-fill"/>
                </svg>

                <a href="{{ path('app_document_print',{'document':document.id,'company':company.id}) }}"
                   target="_blank">
                    <svg width="18" height="18" class="bi me-1">
                        <use href="#filetype-pdf"/>
                    </svg></a>

                <svg width="18" height="18" class="bi">
                    <use href="#check-circle-fill"/>
                </svg>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="8">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

