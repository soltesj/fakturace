                            </svg>
                            {{ company.name }}
                        </a>
                        <ul class="dropdown-menu">
                            {% for company in app.user.companies %}
                                <li class="nav-item"><a class="dropdown-item"
                                                        href="{{ path('app_dash_board', {'company': company.id}) }}">{{ company.name }}</a>
                                </li>
                                {% if not loop.last %}
                                    <li class="nav-item">
                                        <hr class="dropdown-divider">
