                            <svg class="bi d-md-block me-2 mx-md-auto  mb-md-1" width="20" height="20">
                                <use href="#person"/>
                            </svg>
                            <div class="d-none d-md-inline">
                                {{ app.user.name|first|upper }}{{ app.user.surname|first|upper }}
                            </div>
                            <div class="d-inline d-md-none">
                                {{ app.user.name }} {{ app.user.surname }}
                            </div>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="nav-item"><a class="dropdown-item"
                                                    href="{{ path('app_user_edit', {'company': company.id}) }}">Osobní
                                    údaje</a></li>
                            <li class="nav-item">
                                <hr class="dropdown-divider">
                            </li>
                            <li class="nav-item"><a class="dropdown-item" href="{{ path('app_logout') }}">Odhlásit</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
