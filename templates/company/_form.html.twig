{% form_theme form 'form/form_layout_horizontal.html.twig' %}
<div class="bg-background-secondary p-2 mt-5 md:p-4">
    {{ form_start(form) }}
    {{ form_row(form.country) }}
    {{ form_row(form.businessId) }}
    {{ form_row(form.vatNumber) }}
    {{ form_row(form.name) }}
    {{ form_row(form.contact) }}
    {{ form_row(form.street) }}
    {{ form_row(form.buildingNumber) }}
    {{ form_row(form.city) }}
    {{ form_row(form.zipcode) }}
    {{ form_row(form.isVatPayer) }}
    {{ form_row(form.vatPaymentMode) }}
    {{ form_row(form.isOss) }}

    {{ form_row(form.phone) }}
    {{ form_row(form.email) }}
    {{ form_row(form.website) }}

    {{ form_row(form.info) }}

    <button class="w-full mt-10 p-2 bg-green-700 hover:bg-green-500 text-green-100"
            type="submit">{{ button_label|trans|default('button.save') }}</button>
</div>
{{ form_end(form) }}
