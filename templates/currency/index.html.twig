{% extends 'base.html.twig' %}

{% block title %}Edit Company{% endblock %}

{% block body %}
    <h1 class="mb-5">
        <a href="{{ path('app_dash_board',{'company': company.id}) }}" class="text-decoration-none">
            <svg class="bi me-3 mb-1" width="30" height="30">
                <use href="#arrow-left-circle"/>
            </svg>
        </a>
        {{ 'CURRENCIES'|trans }}
    </h1>
<div class="row">
<div class="col-md-6">
    <h2>Current currencies</h2>
    <table class="table table-striped table-hover" >
        {% for currency in company.currency %}
            <tr>
                <td>{{ currency.currencyCode }}</td>
                <td class="text-end"><a href="{{ path('app_company_remove_currency', {'company':company.id, 'currency': currency.id}) }}"
                       class="text-secondary icon-link-hover">
                        <svg class="bi d-block" width="20" height="20">
                            <use href="#dash-circle-fill"/>
                        </svg>
                    </a></td>
            </tr>
        {% endfor %}
    </table>
</div>
<div class="col-md-6">
    <h2>Available currencies</h2>
    <table class="table table-striped table-hover">
        {% for currency in currencies %}
            {% if not company.currency.contains(currency) %}
            <tr>
                <td>{{ currency.currencyCode }}</td>
                <td><a href="{{ path('app_company_add_currency', {'company':company.id, 'currency': currency.id}) }}"
                       class="text-secondary icon-link-hover">
                        <svg class="bi d-block mx-auto" width="20" height="20">
                            <use href="#plus-circle-fill"/>
                        </svg>
                    </a></td>
            </tr>
            {% endif %}
        {% endfor %}
    </table>
</div>
</div>
{% endblock %}
