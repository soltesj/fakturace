{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>{{ form_errors(registrationForm) }}
{#    {% form_theme registrationForm 'bootstrap_5_horizontal_layout.html.twig' %}#}
    {{ form_start(registrationForm) }}
    <div class="row mb-5">
        <div class="col-md-6">{{ form_row(registrationForm.user) }}</div>
        <div class="col-md-6">{{ form_row(registrationForm.company) }}</div>
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-success">Register</button>

    </div> {{ form_end(registrationForm) }}

{% endblock %}
